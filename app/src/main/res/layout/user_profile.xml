<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shlez.synagogue.NavigateDrawer"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/fragment_user_profile">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar_user_profile"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:elevation="4dp"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--Profile Image-->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile_image"
                android:layout_marginTop="30dp"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/camera_icon"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000" />


            <!--Name frame-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/img_profile_name"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <!--Name label-->
                    <TextView
                        android:id="@+id/lbl_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Name" />

                    <!--Name value-->
                    <TextView
                        android:id="@+id/txt_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lbl_profile_name"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>


            <!--Phone Number frame-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img_profile_phone"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <!--Phone Number label-->
                    <TextView
                        android:id="@+id/lbl_profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="10dp"/>

                    <!--Phone Number value-->
                    <TextView
                        android:id="@+id/txt_profile_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lbl_profile_phone"
                        android:inputType="phone"
                        android:text="+Add"
                        android:textColor="#00BFFF"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>


            <!--Email frame-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img_profile_email"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_email_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#F8F8FF">

                    <!--Email label-->
                    <TextView
                        android:id="@+id/lbl_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="10dp"/>

                    <!--Email value-->
                    <TextView
                        android:id="@+id/txt_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lbl_profile_email"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>


            <!--Birthday frame-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img_profile_birthday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_cake_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#F8F8FF">

                    <!--Birthday label-->
                    <TextView
                        android:id="@+id/lbl_profile_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textSize="10dp"/>

                    <!--Birthday value-->
                    <TextView
                        android:id="@+id/txt_profile_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lbl_profile_birthday"
                        android:inputType="date"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>


            <!--Address frame-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img_profile_address"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#F8F8FF">

                    <!--Address label-->
                    <TextView
                        android:id="@+id/lbl_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="10dp"/>

                    <!--Address value-->
                    <TextView
                        android:id="@+id/txt_profile_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lbl_profile_address"
                        android:inputType="textEmailAddress"
                        android:text="+Add"
                        android:textColor="#00BFFF"
                        android:textSize="16dp" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>