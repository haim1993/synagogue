<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!--Phone Number title-->
    <TextView
        android:id="@+id/lbl_add_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="Enter your phone number"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!--Phone Number input-->
        <FrameLayout
            android:id="@+id/frm_create_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:padding="5dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_create_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_create_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_clear_txt_phone_number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="40dp"
                android:background="@drawable/ic_clear_black_24dp"
                android:visibility="gone" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_save_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Phone Number"
            android:layout_margin="20dp"
            android:layout_below="@+id/frm_create_phone_number"
            android:text="SAVE" />

    </RelativeLayout>
</LinearLayout>